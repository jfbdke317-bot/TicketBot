generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model GuildConfig {
  id              String   @id @default("config") // Singleton config for single guild bot
  guildId         String?
  // Deprecated single category ID in favor of TicketCategory model
  ticketCategoryId String?
  transcriptChannelId String?
  supportRoleId   String?
  adminRoleId     String?
  welcomeMessage  String?  @default("Support will be with you shortly.")
  panelMessage    String?  @default("Click the button below to open a ticket.")
  panelChannelId  String?
  maxTickets      Int      @default(1)
  autoCloseHours  Int      @default(24) // 0 to disable
  
  categories      TicketCategory[]
}

model TicketCategory {
  id              String   @id @default(uuid())
  configId        String
  config          GuildConfig @relation(fields: [configId], references: [id])
  
  name            String
  description     String?
  emoji           String?  @default("ðŸ“©")
  buttonStyle     String   @default("Primary") // Primary, Secondary, Success, Danger
  
  discordCategoryId String? // The Discord Category ID where tickets of this type go
  supportRoleId   String?   // Specific role for this category (overrides global)
}

model Ticket {
  id          String   @id @default(uuid())
  channelId   String   @unique
  guildId     String
  openerId    String
  claimedBy   String?
  closedBy    String?
  status      String   @default("OPEN") // OPEN, CLOSED, REQUEST_CLOSE
  type        String?  // The category name/id
  createdAt   DateTime @default(now())
  closedAt    DateTime?
  transcript  String?  // HTML Content or Link
  closeRequestAt DateTime?
}

model User {
  id          String   @id // Discord ID
  username    String?
  avatar      String?
  accessToken String?
  refreshToken String?
  updatedAt   DateTime @updatedAt
  isBanned    Boolean  @default(false)
  banReason   String?
}
