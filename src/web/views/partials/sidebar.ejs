<div class="w-64 bg-slate-900 border-r border-slate-800 flex flex-col">
    <div class="p-6">
        <h1 class="text-xl font-bold text-indigo-500">TicketBot</h1>
    </div>
    <nav class="flex-1 px-4 space-y-2">
        <% const query = (typeof selectedGuildId !== 'undefined' && selectedGuildId) ? `?guild=${selectedGuildId}` : '' %>
        <a href="/dashboard<%= query %>" class="block px-4 py-2 rounded <%= path === '/dashboard' ? 'bg-indigo-600 text-white' : 'hover:bg-slate-800 text-slate-300' %>">Dashboard</a>
        <a href="/deploy<%= query %>" class="block px-4 py-2 rounded <%= path === '/deploy' ? 'bg-indigo-600 text-white' : 'hover:bg-slate-800 text-slate-300' %>">Deploy Panel</a>
        <a href="/tickets<%= query %>" class="block px-4 py-2 rounded <%= path === '/tickets' ? 'bg-indigo-600 text-white' : 'hover:bg-slate-800 text-slate-300' %>">All Tickets</a>
        <a href="/settings<%= query %>" class="block px-4 py-2 rounded <%= path === '/settings' ? 'bg-indigo-600 text-white' : 'hover:bg-slate-800 text-slate-300' %>">Settings</a>
        <a href="<%= inviteUrl %>" target="_blank" class="block px-4 py-2 rounded hover:bg-slate-800 text-slate-300 flex items-center justify-between">
            <span>Invite Bot</span>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/></svg>
        </a>
    </nav>
    <div class="p-4 border-t border-slate-800">
        <div class="flex items-center gap-3">
            <img src="https://cdn.discordapp.com/avatars/<%= user.id %>/<%= user.avatar %>.png" class="w-8 h-8 rounded-full">
            <div class="truncate">
                <p class="text-sm font-medium"><%= user.username %></p>
                <a href="/logout" class="text-xs text-red-400 hover:text-red-300">Logout</a>
            </div>
        </div>
    </div>
</div>
