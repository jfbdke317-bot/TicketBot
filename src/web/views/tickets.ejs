<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TicketBot - All Tickets</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        body { background-color: #0f172a; color: #e2e8f0; }
        .card { background-color: #1e293b; border-radius: 0.5rem; padding: 1.5rem; }
    </style>
</head>
<body class="flex h-screen overflow-hidden">
    
    <%- include('partials/sidebar', { path: '/tickets', user: user, inviteUrl: inviteUrl }) %>

    <!-- Main Content -->
    <main class="flex-1 overflow-y-auto p-8">
        
        <div class="flex justify-between items-center mb-6">
            <h2 class="text-2xl font-bold">Ticket Management</h2>
        </div>

        <!-- Filter & Search -->
        <div class="card mb-6 flex flex-wrap gap-4 items-end">
            <form action="/tickets" method="GET" class="flex gap-4 w-full">
                <div class="flex-1">
                    <label class="block text-xs text-slate-500 mb-1">Search (ID, User ID)</label>
                    <input type="text" name="search" value="<%= search || '' %>" placeholder="Search..." class="w-full bg-slate-950 border border-slate-700 rounded px-3 py-2 text-sm focus:outline-none focus:border-indigo-500">
                </div>
                <div>
                    <label class="block text-xs text-slate-500 mb-1">Status</label>
                    <select name="status" class="bg-slate-950 border border-slate-700 rounded px-3 py-2 text-sm focus:outline-none focus:border-indigo-500 min-w-[150px]">
                        <option value="">All Statuses</option>
                        <option value="OPEN" <%= statusFilter === 'OPEN' ? 'selected' : '' %>>Open</option>
                        <option value="CLOSED" <%= statusFilter === 'CLOSED' ? 'selected' : '' %>>Closed</option>
                        <option value="REQUEST_CLOSE" <%= statusFilter === 'REQUEST_CLOSE' ? 'selected' : '' %>>Closing Request</option>
                    </select>
                </div>
                <div>
                    <label class="block text-xs text-slate-500 mb-1">&nbsp;</label>
                    <button type="submit" class="bg-indigo-600 hover:bg-indigo-700 text-white px-4 py-2 rounded text-sm">Filter</button>
                </div>
            </form>
        </div>

        <!-- Tickets Table -->
        <div class="card overflow-hidden">
            <div class="overflow-x-auto">
                <table class="w-full text-left text-sm">
                    <thead class="bg-slate-950/50 text-slate-400 uppercase text-xs">
                        <tr>
                            <th class="px-4 py-3">Ticket ID</th>
                            <th class="px-4 py-3">Status</th>
                            <th class="px-4 py-3">Opener</th>
                            <th class="px-4 py-3">Created At</th>
                            <th class="px-4 py-3">Claimed By</th>
                            <th class="px-4 py-3 text-right">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-slate-700">
                        <% if (tickets.length === 0) { %>
                            <tr>
                                <td colspan="6" class="px-4 py-8 text-center text-slate-500">No tickets found.</td>
                            </tr>
                        <% } %>
                        <% tickets.forEach(ticket => { %>
                        <tr class="hover:bg-slate-800/50 transition-colors">
                            <td class="px-4 py-3 font-mono text-xs text-indigo-400">#<%= ticket.channelId %></td>
                            <td class="px-4 py-3">
                                <span class="px-2 py-1 rounded text-xs font-bold
                                    <%= ticket.status === 'OPEN' ? 'bg-green-500/20 text-green-400' : 
                                       ticket.status === 'CLOSED' ? 'bg-red-500/20 text-red-400' : 
                                       'bg-yellow-500/20 text-yellow-400' %>">
                                    <%= ticket.status %>
                                </span>
                            </td>
                            <td class="px-4 py-3 text-slate-300"><%= ticket.openerId %></td>
                            <td class="px-4 py-3 text-slate-400"><%= new Date(ticket.createdAt).toLocaleString() %></td>
                            <td class="px-4 py-3 text-slate-400"><%= ticket.claimedBy || '-' %></td>
                            <td class="px-4 py-3 text-right">
                                <% if (ticket.transcript) { %>
                                    <a href="/transcript/<%= ticket.id %>" target="_blank" class="text-indigo-400 hover:text-indigo-300 text-xs bg-indigo-500/10 px-3 py-1 rounded border border-indigo-500/30">
                                        View Transcript
                                    </a>
                                <% } else { %>
                                    <span class="text-slate-600 text-xs">-</span>
                                <% } %>
                            </td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
            
            <!-- Pagination -->
            <% if (totalPages > 1) { %>
            <div class="flex justify-center mt-6 gap-2">
                <% if (currentPage > 1) { %>
                    <a href="?page=<%= currentPage - 1 %>&status=<%= statusFilter %>&search=<%= search %>" class="px-3 py-1 bg-slate-800 rounded hover:bg-slate-700 text-sm">Previous</a>
                <% } %>
                <span class="px-3 py-1 text-slate-500 text-sm">Page <%= currentPage %> of <%= totalPages %></span>
                <% if (currentPage < totalPages) { %>
                    <a href="?page=<%= currentPage + 1 %>&status=<%= statusFilter %>&search=<%= search %>" class="px-3 py-1 bg-slate-800 rounded hover:bg-slate-700 text-sm">Next</a>
                <% } %>
            </div>
            <% } %>
        </div>

    </main>
</body>
</html>
