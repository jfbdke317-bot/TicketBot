<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TicketBot - Settings</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        body { background-color: #0f172a; color: #e2e8f0; }
        .card { background-color: #1e293b; border-radius: 0.5rem; padding: 1.5rem; }
    </style>
</head>
<body class="flex h-screen overflow-hidden">
    
    <%- include('partials/sidebar', { path: '/settings', user: user, inviteUrl: inviteUrl }) %>

    <!-- Main Content -->
    <main class="flex-1 overflow-y-auto p-8">
        
        <div class="flex justify-between items-center mb-6">
            <h2 class="text-2xl font-bold">Bot Configuration</h2>
            
            <!-- Server Switcher -->
            <% if (availableGuilds && availableGuilds.length > 0) { %>
            <form action="/settings" method="GET">
                <select name="guild" onchange="this.form.submit()" class="bg-slate-950 border border-slate-700 rounded px-3 py-2 text-sm focus:outline-none focus:border-indigo-500">
                    <% availableGuilds.forEach(g => { %>
                        <option value="<%= g.id %>" <%= selectedGuildId === g.id ? 'selected' : '' %>><%= g.name %></option>
                    <% }) %>
                </select>
            </form>
            <% } %>
        </div>

        <div class="card max-w-4xl mx-auto">
            <form action="/api/settings" method="POST" class="space-y-6">
                <input type="hidden" name="guildId" value="<%= selectedGuildId %>">
                
                <!-- General -->
                <div>
                    <h3 class="text-lg font-bold text-indigo-400 mb-4 border-b border-slate-700 pb-2">General Settings</h3>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div>
                            <label class="block text-sm font-medium mb-1">Max Tickets per User</label>
                            <input type="number" name="maxTickets" value="<%= config.maxTickets || 1 %>" min="1" max="10" class="w-full bg-slate-950 border border-slate-700 rounded px-3 py-2 focus:outline-none focus:border-indigo-500">
                        </div>
                        <div>
                            <label class="block text-sm font-medium mb-1">Auto-Close Timer (Hours)</label>
                            <input type="number" name="autoCloseHours" value="<%= config.autoCloseHours || 24 %>" min="0" class="w-full bg-slate-950 border border-slate-700 rounded px-3 py-2 focus:outline-none focus:border-indigo-500">
                            <p class="text-xs text-slate-500 mt-1">Set to 0 to disable auto-closing.</p>
                        </div>
                    </div>
                </div>

                <!-- Categories Management -->
                <div>
                    <h3 class="text-lg font-bold text-indigo-400 mb-4 border-b border-slate-700 pb-2">Ticket Categories</h3>
                    <div class="space-y-3 mb-4">
                        <% if (config.categories && config.categories.length > 0) { %>
                            <% config.categories.forEach(cat => { %>
                                <div class="flex items-center justify-between bg-slate-950 p-3 rounded border border-slate-700">
                                    <div class="flex items-center gap-3">
                                        <span class="text-2xl"><%= cat.emoji %></span>
                                        <div>
                                            <p class="font-bold"><%= cat.name %></p>
                                            <p class="text-xs text-slate-500">ID: <%= cat.id %></p>
                                        </div>
                                    </div>
                                    <button type="button" onclick="deleteCategory('<%= cat.id %>')" class="text-red-400 hover:text-red-300 p-2">
                                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/></svg>
                                    </button>
                                </div>
                            <% }) %>
                        <% } else { %>
                            <p class="text-slate-500 italic">No categories created yet. Use /setup-panel in Discord or add one below.</p>
                        <% } %>
                    </div>
                    
                    <!-- Add Category Form -->
                    <div class="bg-slate-900/50 p-4 rounded border border-slate-700 border-dashed">
                        <h4 class="text-sm font-bold mb-3 text-slate-300">Add New Category</h4>
                        <div class="grid grid-cols-1 md:grid-cols-4 gap-2">
                            <input type="text" id="newCatName" placeholder="Name (e.g. Billing)" class="bg-slate-950 border border-slate-700 rounded px-3 py-2 text-sm">
                            <input type="text" id="newCatEmoji" placeholder="Emoji (e.g. ðŸ’°)" class="bg-slate-950 border border-slate-700 rounded px-3 py-2 text-sm">
                            <input type="text" id="newCatParentId" placeholder="Discord Category ID (Optional)" class="bg-slate-950 border border-slate-700 rounded px-3 py-2 text-sm">
                            <button type="button" onclick="createCategory()" class="bg-indigo-600 hover:bg-indigo-700 text-white rounded px-3 py-2 text-sm font-bold">Add Category</button>
                        </div>
                    </div>
                </div>

                <!-- Roles & Channels -->
                <div>
                    <h3 class="text-lg font-bold text-indigo-400 mb-4 border-b border-slate-700 pb-2">Roles & Channels</h3>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div>
                            <label class="block text-sm font-medium mb-1">Ticket Category</label>
                            <select name="categoryId" class="w-full bg-slate-950 border border-slate-700 rounded px-3 py-2 focus:outline-none focus:border-indigo-500">
                                <option value="">-- No Category --</option>
                                <% guildCategories.forEach(c => { %>
                                    <option value="<%= c.id %>" <%= config.ticketCategoryId === c.id ? 'selected' : '' %>><%= c.name %></option>
                                <% }) %>
                            </select>
                        </div>

                        <div>
                            <label class="block text-sm font-medium mb-1">Transcript Channel</label>
                            <select name="transcriptChannelId" class="w-full bg-slate-950 border border-slate-700 rounded px-3 py-2 focus:outline-none focus:border-indigo-500">
                                <option value="">-- No Logs --</option>
                                <% guildChannels.forEach(c => { %>
                                    <option value="<%= c.id %>" <%= config.transcriptChannelId === c.id ? 'selected' : '' %>><%= c.name %></option>
                                <% }) %>
                            </select>
                        </div>

                        <div>
                            <label class="block text-sm font-medium mb-1">Support Role</label>
                            <select name="roleId" class="w-full bg-slate-950 border border-slate-700 rounded px-3 py-2 focus:outline-none focus:border-indigo-500">
                                <option value="">-- No Role --</option>
                                <% guildRoles.forEach(r => { %>
                                    <option value="<%= r.id %>" <%= config.supportRoleId === r.id ? 'selected' : '' %>><%= r.name %></option>
                                <% }) %>
                            </select>
                        </div>
                    </div>
                </div>

                <!-- Messages -->
                <div>
                    <h3 class="text-lg font-bold text-indigo-400 mb-4 border-b border-slate-700 pb-2">Messages</h3>
                    <div>
                        <label class="block text-sm font-medium mb-1">Welcome Message (Inside Ticket)</label>
                        <textarea name="welcomeMsg" class="w-full bg-slate-950 border border-slate-700 rounded px-3 py-2 focus:outline-none focus:border-indigo-500 h-24"><%= config.welcomeMessage || 'Support will be with you shortly.' %></textarea>
                    </div>
                </div>

                <div class="flex justify-end pt-4">
                    <button type="submit" class="bg-green-600 hover:bg-green-700 text-white font-bold py-2 px-6 rounded transition duration-200">
                        Save Configuration
                    </button>
                </div>
            </form>
        </div>

    </main>
    <script>
        async function deleteCategory(catId) {
            if (!confirm('Are you sure you want to delete this category?')) return;
            try {
                const res = await fetch('/api/delete-category', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ categoryId: catId, guildId: '<%= selectedGuildId %>' })
                });
                if (res.ok) window.location.reload();
                else alert('Failed to delete category');
            } catch (e) { console.error(e); alert('Error deleting category'); }
        }

        async function createCategory() {
            const name = document.getElementById('newCatName').value;
            const emoji = document.getElementById('newCatEmoji').value || 'ðŸ“©';
            const parentId = document.getElementById('newCatParentId').value;
            if (!name) return alert('Category name is required');

            try {
                const res = await fetch('/api/create-category-settings', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ name, emoji, parentId, guildId: '<%= selectedGuildId %>' })
                });
                if (res.ok) window.location.reload();
                else alert('Failed to create category');
            } catch (e) { console.error(e); alert('Error creating category'); }
        }
    </script>
</body>
</html>
