<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TicketBot - Dashboard</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        body { background-color: #0f172a; color: #e2e8f0; }
        .card { background-color: #1e293b; border-radius: 0.5rem; padding: 1.5rem; }
    </style>
</head>
<body class="flex h-screen overflow-hidden">
    
    <%- include('partials/sidebar', { path: '/dashboard', user: user, inviteUrl: inviteUrl, selectedGuildId: selectedGuildId }) %>

    <!-- Main Content -->
    <main class="flex-1 overflow-y-auto p-8">
        
        <!-- Stats -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
            <div class="card border border-indigo-500/30">
                <h3 class="text-slate-400 text-sm font-medium">Total Tickets</h3>
                <p class="text-3xl font-bold mt-2"><%= stats.total %></p>
            </div>
            <div class="card border border-green-500/30">
                <h3 class="text-slate-400 text-sm font-medium">Open Tickets</h3>
                <p class="text-3xl font-bold mt-2 text-green-400"><%= stats.open %></p>
            </div>
            <div class="card border border-red-500/30">
                <h3 class="text-slate-400 text-sm font-medium">Closed Tickets</h3>
                <p class="text-3xl font-bold mt-2 text-red-400"><%= stats.closed %></p>
            </div>
        </div>

        <!-- Settings -->
        <!-- Removed settings from dashboard to move to separate page -->

        <!-- Channel Management -->
        <div class="card mb-8">
            <h2 class="text-xl font-bold mb-4">Channel Management</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                
                <!-- Create Category -->
                <form action="/api/create-category" method="POST" class="border border-slate-700 p-4 rounded bg-slate-900/50">
                    <input type="hidden" name="guildId" value="<%= selectedGuildId %>">
                    <h3 class="font-bold text-sm mb-2 text-indigo-400">Create Category</h3>
                    <div class="flex gap-2">
                        <input type="text" name="name" placeholder="Category Name" required class="flex-1 bg-slate-950 border border-slate-700 rounded px-3 py-2 text-sm">
                        <button type="submit" class="bg-indigo-600 hover:bg-indigo-700 text-white px-3 py-2 rounded text-sm">+</button>
                    </div>
                </form>

                <!-- Create Channel -->
                <form action="/api/create-channel" method="POST" class="border border-slate-700 p-4 rounded bg-slate-900/50">
                    <input type="hidden" name="guildId" value="<%= selectedGuildId %>">
                    <h3 class="font-bold text-sm mb-2 text-indigo-400">Create Text Channel</h3>
                    <div class="space-y-2">
                        <input type="text" name="name" placeholder="Channel Name" required class="w-full bg-slate-950 border border-slate-700 rounded px-3 py-2 text-sm">
                        <select name="parentId" class="w-full bg-slate-950 border border-slate-700 rounded px-3 py-2 text-sm">
                            <option value="">-- No Category --</option>
                            <% guildCategories.forEach(c => { %>
                                <option value="<%= c.id %>"><%= c.name %></option>
                            <% }) %>
                        </select>
                        <button type="submit" class="w-full bg-indigo-600 hover:bg-indigo-700 text-white px-3 py-2 rounded text-sm">Create Channel</button>
                    </div>
                </form>

            </div>
        </div>

        <!-- Recent Tickets -->
        <div class="card" id="tickets">
            <h2 class="text-xl font-bold mb-4">Recent Tickets</h2>
            <div class="overflow-x-auto">
                <table class="w-full text-left text-sm">
                    <thead class="bg-slate-950/50 text-slate-400 uppercase text-xs">
                        <tr>
                            <th class="px-4 py-3">ID</th>
                            <th class="px-4 py-3">Status</th>
                            <th class="px-4 py-3">Created</th>
                            <th class="px-4 py-3">Claimed By</th>
                            <th class="px-4 py-3">Action</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-slate-700">
                        <% tickets.forEach(ticket => { %>
                        <tr>
                            <td class="px-4 py-3 font-mono text-xs"><%= ticket.channelId %></td>
                            <td class="px-4 py-3">
                                <span class="px-2 py-1 rounded text-xs <%= ticket.status === 'OPEN' ? 'bg-green-500/20 text-green-400' : 'bg-red-500/20 text-red-400' %>">
                                    <%= ticket.status %>
                                </span>
                            </td>
                            <td class="px-4 py-3 text-slate-400"><%= new Date(ticket.createdAt).toLocaleString() %></td>
                            <td class="px-4 py-3 text-slate-400"><%= ticket.claimedBy || '-' %></td>
                            <td class="px-4 py-3">
                                <% if (ticket.transcript) { %>
                                    <a href="/transcript/<%= ticket.id %>" class="text-indigo-400 hover:text-indigo-300 text-xs bg-indigo-500/10 px-2 py-1 rounded">View</a>
                                <% } %>
                            </td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>

    </main>
</body>
</html>
