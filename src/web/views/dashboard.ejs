<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TicketBot - Dashboard</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        body { background-color: #0f172a; color: #e2e8f0; }
        .card { background-color: #1e293b; border-radius: 0.5rem; padding: 1.5rem; }
    </style>
</head>
<body class="flex h-screen overflow-hidden">
    
    <!-- Sidebar -->
    <div class="w-64 bg-slate-900 border-r border-slate-800 flex flex-col">
        <div class="p-6">
            <h1 class="text-xl font-bold text-indigo-500">TicketBot</h1>
        </div>
        <nav class="flex-1 px-4 space-y-2">
            <a href="#" class="block px-4 py-2 rounded bg-indigo-600 text-white">Dashboard</a>
            <a href="#settings" class="block px-4 py-2 rounded hover:bg-slate-800 text-slate-300">Settings</a>
            <a href="#tickets" class="block px-4 py-2 rounded hover:bg-slate-800 text-slate-300">Tickets</a>
        </nav>
        <div class="p-4 border-t border-slate-800">
            <div class="flex items-center gap-3">
                <img src="https://cdn.discordapp.com/avatars/<%= user.id %>/<%= user.avatar %>.png" class="w-8 h-8 rounded-full">
                <div class="truncate">
                    <p class="text-sm font-medium"><%= user.username %></p>
                    <a href="/logout" class="text-xs text-red-400 hover:text-red-300">Logout</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <main class="flex-1 overflow-y-auto p-8">
        
        <!-- Stats -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
            <div class="card border border-indigo-500/30">
                <h3 class="text-slate-400 text-sm font-medium">Total Tickets</h3>
                <p class="text-3xl font-bold mt-2"><%= stats.total %></p>
            </div>
            <div class="card border border-green-500/30">
                <h3 class="text-slate-400 text-sm font-medium">Open Tickets</h3>
                <p class="text-3xl font-bold mt-2 text-green-400"><%= stats.open %></p>
            </div>
            <div class="card border border-red-500/30">
                <h3 class="text-slate-400 text-sm font-medium">Closed Tickets</h3>
                <p class="text-3xl font-bold mt-2 text-red-400"><%= stats.closed %></p>
            </div>
        </div>

        <!-- Settings -->
        <div class="card mb-8" id="settings">
            <h2 class="text-xl font-bold mb-4">Configuration</h2>
            <form action="/api/settings" method="POST" class="space-y-4">
                <div>
                    <label class="block text-sm font-medium mb-1">Ticket Category ID</label>
                    <input type="text" name="categoryId" value="<%= config.ticketCategoryId || '' %>" class="w-full bg-slate-950 border border-slate-700 rounded px-3 py-2 focus:outline-none focus:border-indigo-500">
                    <p class="text-xs text-slate-500 mt-1">ID of the category where new tickets will be created.</p>
                </div>
                <div>
                    <label class="block text-sm font-medium mb-1">Support Role ID</label>
                    <input type="text" name="roleId" value="<%= config.supportRoleId || '' %>" class="w-full bg-slate-950 border border-slate-700 rounded px-3 py-2 focus:outline-none focus:border-indigo-500">
                    <p class="text-xs text-slate-500 mt-1">Role ID that can see and manage tickets.</p>
                </div>
                <div>
                    <label class="block text-sm font-medium mb-1">Welcome Message</label>
                    <textarea name="welcomeMsg" class="w-full bg-slate-950 border border-slate-700 rounded px-3 py-2 focus:outline-none focus:border-indigo-500 h-24"><%= config.welcomeMessage || 'Support will be with you shortly.' %></textarea>
                </div>
                <button type="submit" class="bg-indigo-600 hover:bg-indigo-700 text-white px-4 py-2 rounded">Save Settings</button>
            </form>
        </div>

        <!-- Recent Tickets -->
        <div class="card" id="tickets">
            <h2 class="text-xl font-bold mb-4">Recent Tickets</h2>
            <div class="overflow-x-auto">
                <table class="w-full text-left text-sm">
                    <thead class="bg-slate-950/50 text-slate-400 uppercase text-xs">
                        <tr>
                            <th class="px-4 py-3">ID</th>
                            <th class="px-4 py-3">Status</th>
                            <th class="px-4 py-3">Created</th>
                            <th class="px-4 py-3">Claimed By</th>
                            <th class="px-4 py-3">Action</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-slate-700">
                        <% tickets.forEach(ticket => { %>
                        <tr>
                            <td class="px-4 py-3 font-mono text-xs"><%= ticket.channelId %></td>
                            <td class="px-4 py-3">
                                <span class="px-2 py-1 rounded text-xs <%= ticket.status === 'OPEN' ? 'bg-green-500/20 text-green-400' : 'bg-red-500/20 text-red-400' %>">
                                    <%= ticket.status %>
                                </span>
                            </td>
                            <td class="px-4 py-3 text-slate-400"><%= new Date(ticket.createdAt).toLocaleString() %></td>
                            <td class="px-4 py-3 text-slate-400"><%= ticket.claimedBy || '-' %></td>
                            <td class="px-4 py-3">
                                <% if (ticket.transcript) { %>
                                    <a href="/transcript/<%= ticket.id %>" class="text-indigo-400 hover:text-indigo-300 text-xs bg-indigo-500/10 px-2 py-1 rounded">View</a>
                                <% } %>
                            </td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>

    </main>
</body>
</html>
