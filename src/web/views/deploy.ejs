<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TicketBot - Deploy Panel</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        body { background-color: #0f172a; color: #e2e8f0; }
        .card { background-color: #1e293b; border-radius: 0.5rem; padding: 1.5rem; }
    </style>
</head>
<body class="flex h-screen overflow-hidden">
    
    <%- include('partials/sidebar', { path: '/deploy', user: user, inviteUrl: inviteUrl, selectedGuildId: selectedGuildId }) %>

    <!-- Main Content -->
    <main class="flex-1 overflow-y-auto p-8">
        
        <h2 class="text-2xl font-bold mb-6">Deploy Ticket Panel</h2>

        <div class="card max-w-2xl mx-auto">
            <form action="/api/deploy-panel" method="POST" class="space-y-6">
                
                <!-- Server Selection -->
                <div>
                    <label class="block text-sm font-medium mb-1">1. Select Server</label>
                    <select id="guildSelect" name="guildId" required class="w-full bg-slate-950 border border-slate-700 rounded px-3 py-2 focus:outline-none focus:border-indigo-500">
                        <option value="">-- Choose a Server --</option>
                        <% guilds.forEach(g => { %>
                            <option value="<%= g.id %>" <%= (typeof selectedGuildId !== 'undefined' && selectedGuildId === g.id) ? 'selected' : '' %>><%= g.name %></option>
                        <% }) %>
                    </select>
                </div>

                <!-- Channel Selection -->
                <div>
                    <label class="block text-sm font-medium mb-1">2. Select Channel</label>
                    <select id="channelSelect" name="channelId" required disabled class="w-full bg-slate-950 border border-slate-700 rounded px-3 py-2 focus:outline-none focus:border-indigo-500 disabled:opacity-50">
                        <option value="">-- First Select Server --</option>
                    </select>
                </div>

                <!-- Panel Type Selection -->
                <div>
                    <label class="block text-sm font-medium mb-1">3. Panel Type</label>
                    <div class="flex gap-4">
                        <label class="flex items-center gap-2 cursor-pointer">
                            <input type="radio" name="panelType" value="default" checked onchange="togglePanelType()" class="accent-indigo-500">
                            <span>Single Button (Default)</span>
                        </label>
                        <label class="flex items-center gap-2 cursor-pointer">
                            <input type="radio" name="panelType" value="categories" onchange="togglePanelType()" class="accent-indigo-500">
                            <span>Category Buttons</span>
                        </label>
                    </div>
                </div>

                <!-- Category Selection (Hidden by default) -->
                <div id="categorySelection" class="hidden p-4 bg-slate-900/50 rounded border border-slate-700">
                    <label class="block text-sm font-medium mb-2">Select Categories to Include</label>
                    <div id="categoriesList" class="space-y-2 max-h-48 overflow-y-auto">
                        <p class="text-xs text-slate-500 italic">Select a server to load categories...</p>
                    </div>
                </div>

                <hr class="border-slate-700">

                <!-- Embed Configuration -->
                <div>
                    <label class="block text-sm font-medium mb-1">Embed Title</label>
                    <input type="text" name="title" value="Support Tickets" class="w-full bg-slate-950 border border-slate-700 rounded px-3 py-2 focus:outline-none focus:border-indigo-500">
                </div>

                <div>
                    <label class="block text-sm font-medium mb-1">Description</label>
                    <textarea name="description" class="w-full bg-slate-950 border border-slate-700 rounded px-3 py-2 focus:outline-none focus:border-indigo-500 h-24">Click the button below to open a ticket.</textarea>
                </div>

                <div class="grid grid-cols-2 gap-4">
                    <div>
                        <label class="block text-sm font-medium mb-1">Embed Color (Hex)</label>
                        <input type="color" name="color" value="#2b2d31" class="w-full h-10 bg-slate-950 border border-slate-700 rounded px-1 py-1 cursor-pointer">
                    </div>
                    <div>
                        <label class="block text-sm font-medium mb-1">Button Label</label>
                        <input type="text" name="btnLabel" value="Open Ticket" class="w-full bg-slate-950 border border-slate-700 rounded px-3 py-2 focus:outline-none focus:border-indigo-500">
                    </div>
                </div>

                <div>
                    <label class="block text-sm font-medium mb-1">Button Emoji</label>
                    <input type="text" name="btnEmoji" value="ðŸ“©" class="w-full bg-slate-950 border border-slate-700 rounded px-3 py-2 focus:outline-none focus:border-indigo-500" placeholder="e.g. ðŸ“© or :smile:">
                </div>

                <button type="submit" class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 px-4 rounded transition duration-200">
                    ðŸš€ Send Panel
                </button>
            </form>
        </div>

    </main>

    <script>
        const guildSelect = document.getElementById('guildSelect');
        const channelSelect = document.getElementById('channelSelect');
        const categoriesList = document.getElementById('categoriesList');
        const categorySelection = document.getElementById('categorySelection');
        
        function togglePanelType() {
            const type = document.querySelector('input[name="panelType"]:checked').value;
            if (type === 'categories') {
                categorySelection.classList.remove('hidden');
            } else {
                categorySelection.classList.add('hidden');
            }
        }

        guildSelect.addEventListener('change', async () => {
            const guildId = guildSelect.value;
            
            // Reset channels & categories
            channelSelect.innerHTML = '<option value="">-- Loading Channels... --</option>';
            channelSelect.disabled = true;
            categoriesList.innerHTML = '<p class="text-xs text-slate-500 italic">Loading categories...</p>';

            if (!guildId) {
                channelSelect.innerHTML = '<option value="">-- First Select Server --</option>';
                categoriesList.innerHTML = '<p class="text-xs text-slate-500 italic">Select a server to load categories...</p>';
                return;
            }

            try {
                // Fetch Channels
                const channelRes = await fetch(`/api/guilds/${guildId}/channels`);
                const channels = await channelRes.json();

                channelSelect.innerHTML = '<option value="">-- Select Channel --</option>';
                channels.forEach(c => {
                    const opt = document.createElement('option');
                    opt.value = c.id;
                    opt.textContent = '#' + c.name;
                    channelSelect.appendChild(opt);
                });
                channelSelect.disabled = false;

                // Fetch Categories
                const catRes = await fetch(`/api/guilds/${guildId}/categories`);
                const categories = await catRes.json();
                
                if (categories.length > 0) {
                    categoriesList.innerHTML = '';
                    categories.forEach(cat => {
                        const div = document.createElement('div');
                        div.className = 'flex items-center gap-2';
                        div.innerHTML = `
                            <input type="checkbox" name="selectedCategories" value="${cat.id}" checked class="accent-indigo-500 w-4 h-4">
                            <span class="text-xl">${cat.emoji}</span>
                            <span>${cat.name}</span>
                        `;
                        categoriesList.appendChild(div);
                    });
                } else {
                    categoriesList.innerHTML = '<p class="text-xs text-yellow-500">No categories found. Create some in Settings first.</p>';
                }

            } catch (error) {
                console.error('Error fetching data:', error);
                channelSelect.innerHTML = '<option value="">-- Error Loading Channels --</option>';
                categoriesList.innerHTML = '<p class="text-xs text-red-500">Error loading categories.</p>';
            }
        });

        // Trigger change if value is pre-selected
        if (guildSelect.value) {
            guildSelect.dispatchEvent(new Event('change'));
        }
    </script>
</body>
</html>
